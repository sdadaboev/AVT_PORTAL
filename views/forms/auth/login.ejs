<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/header/head') %>
        <link rel="stylesheet" href="/css/mainPage.css">
    </head>
    <body>
        <section class="mainpage">
            <div class="video-wrapper">
                <video autoplay muted loop id="myVideo">
                    <source src="/videos/loginVideo.mp4" type="video/mp4">
                </video>
            </div>
            <div class="form-wrapper-login">
                            <form class="form-elements" action="/auth/login" method="post">
                                <h3 class="form-name">Tizimga kirish</h3>
                                <div class="form-elements">
                                    <input
                                    type="text"
                                    name="username"
                                    placeholder="Foydalanuvchi nomi"
                                    required
                                    autocomplete="on"
                                    />
                                    <input
                                        type="password"
                                        name="password"
                                        placeholder="Parol"
                                        readonly
                                        onfocus="this.removeAttribute('readonly')"
                                    />
                                    <button class="kirish" type="submit">Tizimga kirish</button>
                                    yoki
                                    <button class="register"><a href="/auth/registration">Ro'yxatdan o'tish</a></button>
                                </div>
                                <div class="errors">
                                    <% if(message) {%>
                                        <%= message %></p>
                                    <%}%>
                                </div>
                            </form>
            </div>
        </section>
       <script>
            function isMobileDevice() {
                return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
            }
                function showMobileMessage() {
                    let container = document.createElement('div');
                    container.style.width = '100%';
                    container.style.height = '100vh';
                    container.style.display = 'flex';
                    container.style.justifyContent = 'center';
                    container.style.alignItems = 'center';
                    container.style.position = 'fixed';
                    container.style.top = '0';
                    container.style.left = '0';
                    container.style.backgroundColor = 'rgba(255, 255, 255, 1)';
                    container.style.zIndex = '999';
                    var text = document.createElement('div');
                    text.textContent = 'Iltimos kompyuter orqali kiring';
                    text.style.textAlign = 'center';
                    text.style.fontSize = '24px';
                    text.style.fontWeight = 'bold';
                    container.appendChild(text);

                    document.body.appendChild(container);
                }       
                if (isMobileDevice()) {
                    showMobileMessage();
                }
       </script>
    </body>
</html>
